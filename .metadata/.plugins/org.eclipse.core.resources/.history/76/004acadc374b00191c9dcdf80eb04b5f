package com.yoke;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

import javax.xml.parsers.DocumentBuilder;
import javax.xml.parsers.DocumentBuilderFactory;
import javax.xml.parsers.ParserConfigurationException;

import org.w3c.dom.Document;
import org.w3c.dom.Element;
import org.w3c.dom.NodeList;
import org.xml.sax.SAXException;

/**
 * A singleton class intended to store local data
 */
public class LocalSettings {
	// The singleton instance of the settings
	protected LocalSettings INSTANCE;
	
	/**
	 * Retrieves the singleton instance of the settings
	 * @return The instance
	 */
	public LocalSettings getInstance() {
		if (INSTANCE == null) {
			INSTANCE = new LocalSettings();
		}
		
		return INSTANCE;
	}
	
	// The file in which the settings are saved
	protected File settingsFile = new File(System.getenv("APPDATA")+"/Yoke/settings.xml");
	
	// The settings as an xml document
	protected Document settings;
	
	/**
	 * Creates a local settings instance
	 */
	public LocalSettings() {
	    // Initialize the settings
        try {
            // Read the xml file
            BufferedReader br = new BufferedReader(new FileReader(settingsFile));
            
            String data = "";
            String st; 
            while ((st = br.readLine()) != null) {
                data += st;
            } 

            // Get an xml interface
            DocumentBuilderFactory dbFactory = DocumentBuilderFactory.newInstance();
            DocumentBuilder dBuilder = dbFactory.newDocumentBuilder();
            settings = dBuilder.parse(data);;
            
        } catch (IOException | SAXException | ParserConfigurationException e) {
            // TODO Auto-generated catch block
            e.printStackTrace();
            
            // Make sure there is some valid settings document even if something went wrong
            this.createDefault();
        } 
	}
	
	/**
	 * Create the default settings if no file is present
	 */
	protected void createDefault() {
	    try {
            DocumentBuilderFactory dbFactory =
            DocumentBuilderFactory.newInstance();
            DocumentBuilder dBuilder = dbFactory.newDocumentBuilder();
            settings = dBuilder.newDocument();
            
            // initialize the document
            Element rootElement = settings.createElement("root");
            settings.appendChild(rootElement);
        } catch (Exception e2) {
            e2.printStackTrace();
        }
	}
	
	
	public void save() {
		
	}
}
