<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.yoke.activities.macro.tabs.MacroAppearance">

    <ImageView
        android:id="@+id/dragObject"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/draggable"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/objectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Placeholder"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/actionText"
        app:layout_constraintEnd_toStartOf="@+id/dragObject"
        app:layout_constraintStart_toStartOf="@+id/actionText"
        app:layout_constraintTop_toTopOf="@+id/actionText" />

    <ImageView
        android:id="@+id/increaseRepeat"
        android:src="@drawable/arrow_down"
        android:tint="@color/colorSecondary"
        android:rotation="180"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/editRepetitions"
        app:layout_constraintEnd_toEndOf="@+id/editRepetitions"
        app:layout_constraintStart_toStartOf="@+id/editRepetitions" />

    <ImageView
        android:id="@+id/decreaseRepeat"
        android:src="@drawable/arrow_down"
        android:tint="@color/colorSecondary"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/editRepetitions"
        app:layout_constraintStart_toStartOf="@+id/editRepetitions"
        app:layout_constraintTop_toBottomOf="@+id/editRepetitions" />

    <ImageView
        android:id="@+id/increaseTime"
        android:src="@drawable/arrow_down"
        android:tint="@color/colorSecondary"
        android:rotation="180"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/editDelay"
        app:layout_constraintEnd_toEndOf="@+id/editDelay"
        app:layout_constraintStart_toStartOf="@+id/editDelay" />

    <ImageView
        android:id="@+id/decreaseTime"
        android:src="@drawable/arrow_down"
        android:tint="@color/colorSecondary"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/editDelay"
        app:layout_constraintStart_toStartOf="@+id/editDelay"
        app:layout_constraintTop_toBottomOf="@+id/editDelay" />

    <EditText
        android:id="@+id/editRepetitions"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="0x"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/actionText"
        app:layout_constraintEnd_toStartOf="@+id/editDelay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/actionText" />

    <EditText
        android:id="@+id/editDelay"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0s"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/decreaseRepeat"
        app:layout_constraintStart_toEndOf="@+id/editRepetitions"
        app:layout_constraintTop_toTopOf="@+id/editRepetitions" />

    <View
        android:id="@+id/actionText"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/dragObject"
        app:layout_constraintEnd_toStartOf="@+id/dragObject"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toTopOf="@+id/dragObject" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editDelay"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>