<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yoke.activities.macro.tabs.MacroAppearance">

    <ImageView
        android:id="@+id/previewImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusableInTouchMode="true" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/foregroundLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/previewImage">

        <TextView
            android:id="@+id/foregroundHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Foreground"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/foregroundImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/default_image"
            app:layout_constraintEnd_toStartOf="@+id/foregroundDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foregroundHeader" />

        <ImageView
            android:id="@+id/foregroundColorPicker"
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:src="@drawable/color_picker"
            android:tint="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="@+id/foregroundImage"
            app:layout_constraintEnd_toEndOf="@+id/foregroundImage" />

        <TextView
            android:id="@+id/seekAlphaForegroundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Transparency"
            app:layout_constraintStart_toStartOf="@+id/foregroundImage"
            app:layout_constraintTop_toBottomOf="@+id/foregroundImage" />

        <SeekBar
            android:id="@+id/seekAlphaForeground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="255"
            android:progress="255"
            app:layout_constraintEnd_toEndOf="@+id/foregroundImage"
            app:layout_constraintStart_toStartOf="@+id/foregroundImage"
            app:layout_constraintTop_toBottomOf="@+id/seekAlphaForegroundText" />

        <ImageButton
            android:id="@+id/seekAlphaForegroundDefault"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/reset_button"
            app:layout_constraintBottom_toBottomOf="@+id/seekAlphaForeground"
            app:layout_constraintStart_toEndOf="@+id/seekAlphaForeground"
            app:layout_constraintTop_toTopOf="@+id/seekAlphaForeground" />


        <View
            android:id="@+id/foregroundDivider"
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="@+id/seekAlphaForeground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/backgroundHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Background"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/foregroundDivider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/default_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/foregroundDivider"
            app:layout_constraintTop_toBottomOf="@+id/backgroundHeader" />

        <ImageView
            android:id="@+id/backgroundColorPicker"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_picker"
            android:tint="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundImage"
            app:layout_constraintEnd_toEndOf="@+id/backgroundImage" />


        <TextView
            android:id="@+id/seekAlphaBackgroundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Transparency"
            app:layout_constraintStart_toStartOf="@+id/backgroundImage"
            app:layout_constraintTop_toBottomOf="@+id/backgroundImage" />

        <SeekBar
            android:id="@+id/seekAlphaBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="255"
            android:progress="255"
            app:layout_constraintEnd_toEndOf="@+id/backgroundImage"
            app:layout_constraintStart_toStartOf="@+id/backgroundImage"
            app:layout_constraintTop_toBottomOf="@+id/seekAlphaBackgroundText" />

        <ImageButton
            android:id="@+id/seekAlphaBackgroundDefault"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/reset_button"
            app:layout_constraintBottom_toBottomOf="@+id/seekAlphaBackground"
            app:layout_constraintStart_toEndOf="@+id/seekAlphaBackground"
            app:layout_constraintTop_toTopOf="@+id/seekAlphaBackground" />


        <ImageView
            android:id="@+id/descriptionColorPicker"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/color_picker"
            android:tint="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="@+id/descriptionValue"
            app:layout_constraintStart_toEndOf="@+id/descriptionValue"
            app:layout_constraintTop_toTopOf="@+id/descriptionValue" />

        <Switch
            android:id="@+id/descriptionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/descriptionText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/descriptionText" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Description"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekAlphaForeground" />

        <EditText
            android:id="@+id/descriptionValue"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:hint="Macro text"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>